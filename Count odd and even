;WAP to Find total no. of odd and even numbers in series stored from 2500H onwards. 
;The length of series is stored at 24FFH.


JMP START 
;STORE 10 ODD/EVEN NUMBERS;
START:  MVI A,01H; ODD 
	STA 2000

	MVI A,02H;EVEN
	STA 2001
	STA 2003
	STA 2006
	STA 2009

	MVI A,03H;ODD
	STA 2002
	STA 2004
	STA 2005
	STA 2007
	STA 2008

	;MAIN PROGRAM;

	LXI H,2000; POINT TO FIRST NUMBER
	MVI B,10; COUNTER
	MVI C,0; CLEAR C

LOOP:   MOV A,M; 
	ANI 01H; ADD FILTER
	JZ NOTNEG
	INR C; COUNTS ODDS

NOTNEG: INX H
	DCR B
	JNZ LOOP
	
	MOV A,C;
	STA 024FFH; STORE ODDS AT 024FF
	
	MVI A,10;
	SUB C;
	STA 024FEH; STORE EVENS AT 024FEH

	;STORE
	HLT