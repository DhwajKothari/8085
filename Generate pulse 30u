;WAP to generate a pulse every 30Î¼s from counter 1 of 8253. Assume clock frequency to be 1MHz.
; CLK FREQ = 1M
; CLK TIME PRERIOD = 1u
; 30u/1u = 30 IN DECIMAL
; 30 IN DECIMAL = 1E IN HEX


; SELECT COUNTER - SC1 = 0 AND SC0 = 1
; R/W LEAST SIGNIFICANT BYTE ONLY - RW1 = 0 AND RW0 = 1
; MODE 2 - X 1 0 FOR M2 M1 M0. HERE WE TAKE X = 0
; 0 FOR BINARY COUNTER
; CW = 01010100 = 54H

JMP START

START:  MVI A,054H; LOAD CONTROL WORD
	OUT 083H; 
	MVI A,01EH; LOAD COUNT
	OUT 081H;
	HLT