	jmp START
START:  MVI B,00 ; counts carries
	MVI C,07 ; runs 7 times
	LXI H,2050 ; points to lower byte of first 16 bit no
	LXI D,2052 ; points to lower byte of second 16 bit no

POS:	MOV A,M 
	XCHG ;xchange HL and DE
	ADD M ; now add the new value pointed by m
	STA 2060; store the lower byte of answer

	JNC SKIP ; if no carry, skip
	INR B ; else increment b

SKIP:  	INX H
	INX D
	MOV A,M
	XCHG
	ADD M

	JNC SKIP2
	MVI A,1
	STA 2062 ; store final carry

SKIP2:	MOV A,B
	RAR

	JNC SKIP3 ; if no carry, skip2
	INR A 
SKIP3:  STA 2061 ; store the higher byte of answer
	DCR C

	JNC POS
	HLT